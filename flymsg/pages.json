{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index"
			
		},
		{
			"path": "pages/list/List",
			"style": {
				"navigationBarTitleText": "列表信息",
				"enablePullDownRefresh": true,
				// 距离底部200触发触底事件
				"onReachBottomDistance": 200,
				"backgroundTextStyle": "light",
				// h5
				"h5": {
					// 下拉刷新圈圈的颜色
					"pullToRefresh": {
						"color": "#f00"
					}
				}
			}
		},
		
		{
			"path": "pages/home/home"
		},
		
		{
			"path": "pages/uni-style/uni-style"
		},
		
		{
			"path": "pages/contact/contact"	
		
		},
		{
			"path": "pages/message/message",
			// 局部页面样式
			"style": {
				"navigationBarTitleText": "信息页",
				"navigationBarBackgroundColor": "#666",
				// 给h5页面单独设置
				"h5": {
					"pullToRefresh": {
						"color": "#7D26CD"
					},
					"titleNView": {
						"backgroundColor": "#999"
					}
				}
			}
			
		},
		{
			"path": "pages/detail/detail"
		}
    ],
	"tabBar": {
		"color": "#999",
		"selectedColor": "#66ccff",
		"backgroundColor": "#ddd",
		"borderStyle": "white",
		// 红点颜色
		"redDotColor": "#f55",
		// tabBar的位置 只有微信小程序支持top顶部(不过top就不带图标了)
		"position": "bottom",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/tabs/home.png",
				"selectedIconPath": "static/tabs/home-active.png"
			},
			{
				"text": "信息",
				"pagePath": "pages/message/message",
				"iconPath": "static/tabs/message.png",
				"selectedIconPath": "static/tabs/message-active.png"
			},
			{
				"text": "联系我们",
				"pagePath": "pages/contact/contact",
				"iconPath": "static/tabs/contact.png",
				"selectedIconPath": "static/tabs/contact-active.png"
			},
			{
				"text": "列表",
				"pagePath": "pages/list/List"
			}
		]
		
	},
	// 全局样式
	"globalStyle": {
		// 导航栏文字
		"navigationBarTitleText": "flymsg",
		// 导航栏文字颜色
		"navigationBarTextStyle": "white",
		// 顶部导航栏颜色
		"navigationBarBackgroundColor": "#6cf",
		// 下拉刷新区域背景色
		"backgroundColor": "#89b",
		// 开启下拉刷新 哪个页面需要就给哪个页面开启
		// "enablePullDownRefresh": true
		// 页面上拉触底事件触发的时候距离底部的距离 单位px
		"onReachBottomDistance": 200
	},
	"uniIdRouter": {},
	"condition": {
		"current": 0,
		"list": [
			{
				"name": "详情页",
				"path": "pages/detail/detail",
				"query": "id=80"
			}
		]
	}
}
